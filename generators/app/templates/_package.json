    "babel-eslint": "^7.1.0",
    "node-sass": "^3.10.1",
    "css-loader": "^0.25.0",
    "style-loader": "^0.13.1",
    "sass-loader": "^4.0.2",
    "stylelint-webpack-plugin": "^0.4.0"

    <% if(includeReact) { %>,
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0",
    "eslint-plugin-react": "^6.6.0",
    "babel-preset-react": "^6.16.0"
    <% } %>
    
    <% if(includeServer) { %>,
    "express": "^4.14.0",
    "mongoose": "^4.7.1",
    "path": "^0.12.7",
